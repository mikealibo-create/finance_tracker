<% @friends.each do |f| %>
    <div class="row friend-card m-2 p-3">
        <div class="col-8">
            <%= f.first_name %> <%= f.last_name %>
        </div>
        <div class="col-4 text-right">
            <button type="button" class="btn btn-sm btn-warning">Unfollow</button>
        </div>
    </div>
<% end %>