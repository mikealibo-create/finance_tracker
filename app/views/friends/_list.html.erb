<% @friends.each do |f| %>
    <div class="row friend-card m-2 p-3">
        <div class="col-sm-12 col-md-10 col-lg-11">
            <%= f.first_name %> <%= f.last_name %>
        </div>
        <div class="col-sm-12 col-md-2 col-lg-1">

            <%= link_to friendship_path(f), method: :delete, data: { confirm: "Are you sure?" } do %>
                <%= fa_icon 'user-times' %>
            <% end %>
            
        </div>
    </div>
<% end %>