<div class="container">
    <h1>My Portfolio</h1>
    <hr class="my-4">
    <h4>Search Stocks</h4>
    
    <%= form_tag search_stock_path, method: :get do %>
        <div class="input-group mb-3">

            <%= text_field_tag :stock, params[:stock], placeholder: 'Stock Ticker Symbol', autofocus: true, class: "form-control" %>
            <div class="input-group-append">
                <%= button_tag type: :submit, class: "btn btn-outline-secondary" do%>
                    <%= fa_icon "search" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>